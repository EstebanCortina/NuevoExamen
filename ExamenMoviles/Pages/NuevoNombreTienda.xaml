<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ExamenMoviles.Pages.NuevoNombreTienda"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Nombre">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Ingrese el Nombre de la tienda:"
            VerticalOptions="Center" />
        <Entry
            x:Name="inTiendaName"
            FontSize="Medium"
            WidthRequest="250" />
        <Button Clicked="BtnGuardarNombreTienda" Text="Guardar Nombre" />
        <Button Clicked="BtnSendToMainPage" Text="Continuar Sin Nombre" />
    </VerticalStackLayout>
</ContentPage>